<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:id="@+id/Reg"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#FFFFFF"
    android:orientation="vertical"
    app:layout_constraintCircleRadius="16dp"
    tools:context=".Registration_Activity">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:background="#F0E9D2">

        <ImageView
            android:id="@+id/imageView2"
            android:layout_width="160dp"
            android:layout_height="160dp"
            android:layout_gravity="center"
            android:layout_marginTop="20dp"
            android:layout_marginBottom="20dp"
            app:srcCompat="@drawable/registration" />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:layout_marginTop="20dp"
            android:layout_marginBottom="40dp"
            android:text="Register"
            android:textColor="#181D31"
            android:textSize="36sp"
            android:fontFamily="@font/averia_gruesa_libre"
            android:textStyle="bold"/>
    </LinearLayout>


    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical"
        android:background="#284255">

        <EditText
            android:id="@+id/Reg_Name"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:padding="20dp"
            android:drawableLeft="@drawable/ic_baseline_person_24"
            android:layout_marginLeft="20dp"
            android:layout_marginRight="20dp"
            android:layout_marginBottom="10dp"
            android:layout_marginTop="40dp"
            android:background="@drawable/edittext_design"
            android:textColorHint="#F0E9D2"
            android:hint="Enter Name"
            android:textSize="20sp"
            android:textColor="#F0E9D2"
            />

        <EditText
            android:id="@+id/Reg_Email"
            android:layout_width="match_parent"
            android:inputType="textEmailAddress"
            android:layout_height="wrap_content"
            android:padding="20dp"
            android:layout_marginLeft="20dp"
            android:layout_marginRight="20dp"
            android:layout_marginBottom="10dp"
            android:drawableLeft="@drawable/account"
            android:background="@drawable/edittext_design"
            android:textColorHint="#F0E9D2"
            android:textColor="#F0E9D2"
            android:hint="Enter Email"
            android:textSize="20sp"
            />

        <EditText
            android:id="@+id/Reg_Pass"
            android:layout_width="match_parent"
            android:inputType="textPassword"
            android:layout_height="wrap_content"
            android:padding="20dp"
            android:layout_marginLeft="20dp"
            android:layout_marginRight="20dp"
            android:layout_marginBottom="10dp"
            android:drawableLeft="@drawable/keylog"
            android:background="@drawable/edittext_design"
            android:textColorHint="#F0E9D2"
            android:textColor="#F0E9D2"
            android:hint="Enter Password"
            android:textSize="20sp"
            />

        <Button
            android:id="@+id/Register"
            android:padding="10dp"
            android:textColor="#F0E9D2"
            android:layout_width="wrap_content"
            android:text="Register"
            android:textSize="20sp"
            android:textAllCaps="false"
            android:layout_gravity="center"
            android:layout_height="wrap_content"
            android:backgroundTint="#181D31"/>

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Already Have Account?"
            android:textColor="#F0E9D2"
            android:layout_gravity="center"
            android:layout_marginTop="5sp"
            android:textSize="14sp"
            />
        <TextView
            android:id="@+id/Login"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Login"
            android:textColor="#F0E9D2"
            android:layout_gravity="center"
            android:layout_marginTop="5sp"
            android:textSize="14sp"
            android:textStyle="bold"
            />

    </LinearLayout>

</LinearLayout>