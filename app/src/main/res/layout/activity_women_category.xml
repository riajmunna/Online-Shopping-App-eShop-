<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:orientation="vertical"
    android:layout_height="match_parent"
    android:background="#181D31"
    tools:context=".WomenCategoryActivity">
    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="40dp"
        android:fontFamily="@font/averia_gruesa_libre"
        android:text="Ladies Collection"
        android:textAlignment="center"
        android:textColor="#F0E9D2"
        android:textSize="30sp"
        android:textStyle="bold" />

    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        tools:ignore="SpeakableTextPresentCheck">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical" >
            <GridLayout
                android:layout_marginLeft="5dp"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="30dp"
                android:columnCount="4"
                android:orientation="vertical"
                android:rowCount="4">

                <androidx.cardview.widget.CardView
                    android:id="@+id/ladies1"
                    android:layout_width="170dp"
                    android:layout_height="180dp"
                    android:layout_row="0"
                    android:layout_column="0"
                    android:layout_margin="10dp"
                    app:cardBackgroundColor="#F0E9D2"
                    app:cardCornerRadius="20dp"
                    app:cardElevation="10dp"
                    app:cardMaxElevation="2dp"
                    app:cardPreventCornerOverlap="true">

                    <ImageView
                        android:layout_width="match_parent"
                        android:layout_height="100dp"
                        android:layout_gravity="center"
                        android:layout_margin="10dp"
                        android:src="@drawable/ladies1"/>

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_gravity="bottom|center"
                        android:layout_marginBottom="10dp"
                        android:text="Ladies Lehenga"
                        android:textColor="#181D31"
                        android:textSize="20sp"
                        android:textStyle="bold" />

                </androidx.cardview.widget.CardView>

                <androidx.cardview.widget.CardView
                    android:id="@+id/ladies2"
                    android:layout_width="170dp"
                    android:layout_height="180dp"
                    android:layout_row="0"
                    android:layout_column="1"
                    android:layout_margin="10dp"
                    app:cardBackgroundColor="#F0E9D2"
                    app:cardCornerRadius="20dp"
                    app:cardElevation="10dp"
                    app:cardMaxElevation="2dp"
                    app:cardPreventCornerOverlap="true">

                    <ImageView
                        android:layout_width="match_parent"
                        android:layout_height="100dp"
                        android:layout_gravity="center"
                        android:layout_margin="10dp"
                        android:src="@drawable/ladies2" />

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_gravity="bottom|center"
                        android:layout_marginBottom="10dp"
                        android:text="Ladies Pant"
                        android:textColor="#181D31"
                        android:textSize="20sp"
                        android:textStyle="bold" />

                </androidx.cardview.widget.CardView>

                <androidx.cardview.widget.CardView
                    android:id="@+id/ladies3"
                    android:layout_width="170dp"
                    android:layout_height="180dp"
                    android:layout_row="1"
                    android:layout_column="0"
                    android:layout_margin="10dp"
                    app:cardBackgroundColor="#F0E9D2"
                    app:cardCornerRadius="20dp"
                    app:cardElevation="10dp"
                    app:cardMaxElevation="2dp"
                    app:cardPreventCornerOverlap="true">

                    <ImageView
                        android:layout_width="match_parent"
                        android:layout_height="100dp"
                        android:layout_gravity="center"
                        android:layout_margin="10dp"
                        android:src="@drawable/ladies3" />

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_gravity="bottom|center"
                        android:layout_marginBottom="10dp"
                        android:text="Ladies Pant"
                        android:textColor="#181D31"
                        android:textSize="20sp"
                        android:textStyle="bold" />

                </androidx.cardview.widget.CardView>

                <androidx.cardview.widget.CardView
                    android:id="@+id/ladies4"
                    android:layout_width="170dp"
                    android:layout_height="180dp"
                    android:layout_row="1"
                    android:layout_column="1"
                    android:layout_margin="10dp"
                    app:cardBackgroundColor="#F0E9D2"
                    app:cardCornerRadius="20dp"
                    app:cardElevation="10dp"
                    app:cardMaxElevation="2dp"
                    app:cardPreventCornerOverlap="true">

                    <ImageView
                        android:layout_width="match_parent"
                        android:layout_height="100dp"
                        android:layout_gravity="start|center"
                        android:layout_margin="10dp"
                        android:src="@drawable/ladies4" />

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_gravity="bottom|center"
                        android:layout_marginBottom="10dp"
                        android:text="Ladies Pant"
                        android:textColor="#181D31"
                        android:textSize="20sp"
                        android:textStyle="bold" />
                </androidx.cardview.widget.CardView>

                <androidx.cardview.widget.CardView
                    android:id="@+id/ladies5"
                    android:layout_width="170dp"
                    android:layout_height="180dp"
                    android:layout_row="2"
                    android:layout_column="0"
                    android:layout_margin="10dp"
                    app:cardBackgroundColor="#F0E9D2"
                    app:cardCornerRadius="20dp"
                    app:cardElevation="10dp"
                    app:cardMaxElevation="2dp"
                    app:cardPreventCornerOverlap="true">

                    <ImageView
                        android:layout_width="match_parent"
                        android:layout_height="100dp"
                        android:layout_gravity="center"
                        android:layout_margin="10dp"
                        android:src="@drawable/ladies5" />

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_gravity="bottom|center"
                        android:layout_marginBottom="10dp"
                        android:text="Ladies T-Shirt"
                        android:textColor="#181D31"
                        android:textSize="20sp"
                        android:textStyle="bold" />

                </androidx.cardview.widget.CardView>

                <androidx.cardview.widget.CardView
                    android:id="@+id/ladies6"
                    android:layout_width="170dp"
                    android:layout_height="180dp"
                    android:layout_row="2"
                    android:layout_column="1"
                    android:layout_margin="10dp"
                    app:cardBackgroundColor="#F0E9D2"
                    app:cardCornerRadius="20dp"
                    app:cardElevation="10dp"
                    app:cardMaxElevation="2dp"
                    app:cardPreventCornerOverlap="true">

                    <ImageView
                        android:layout_width="match_parent"
                        android:layout_height="100dp"
                        android:layout_gravity="start|center"
                        android:layout_margin="10dp"
                        android:src="@drawable/ladies6" />

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_gravity="bottom|center"
                        android:layout_marginBottom="10dp"
                        android:text="Ladies T-Shirt"
                        android:textColor="#181D31"
                        android:textSize="20sp"
                        android:textStyle="bold" />
                </androidx.cardview.widget.CardView>
                <androidx.cardview.widget.CardView
                    android:id="@+id/ladies8"
                    android:layout_width="170dp"
                    android:layout_height="180dp"
                    android:layout_row="3"
                    android:layout_column="0"
                    android:layout_margin="10dp"
                    app:cardBackgroundColor="#F0E9D2"
                    app:cardCornerRadius="20dp"
                    app:cardElevation="10dp"
                    app:cardMaxElevation="2dp"
                    app:cardPreventCornerOverlap="true">

                    <ImageView
                        android:layout_width="match_parent"
                        android:layout_height="100dp"
                        android:layout_gravity="start|center"
                        android:layout_margin="10dp"
                        android:src="@drawable/ladies8" />

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_gravity="bottom|center"
                        android:layout_marginBottom="10dp"
                        android:text="Ladies Lehenga"
                        android:textColor="#181D31"
                        android:textSize="20sp"
                        android:textStyle="bold" />
                </androidx.cardview.widget.CardView>


            </GridLayout>

        </LinearLayout>
    </ScrollView>
</LinearLayout>